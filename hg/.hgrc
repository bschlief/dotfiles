[ui]
username = Bryan Schlief <bryans@darkhorse.com>
verbose = True
style = compact
editor = vim

[extensions]
graphlog =
pager =
color =
rebase =

[alias]
l = glog --template '{node|short} | {date|isodatesec} | {author|user}: {desc|strip|firstline}\n'
slog = log --style=$HOME/my/dotfiles/hg/map-cmdline.slog
glog = glog --style=$HOME/my/dotfiles/hg/map-cmdline.glog
nlog = log --style=$HOME/my/dotfiles/hg/map-cmdline.nlog
sglog = glog --style=$HOME/my/dotfiles/hg/map-cmdline.sglog

[pager]
pager = LESS='FRX' less
attend = annotate, cat, diff, export, glog, log, qdiff, l, slog, glog, nlog, sglog
